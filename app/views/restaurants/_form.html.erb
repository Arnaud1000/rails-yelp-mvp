<div class="jumbotron">
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :stars %>
    <%= f.input :category %>
    <%= f.input :phone_number %>
  </div>

  <div class="form-actions btn btn-primary btn-block">
    <%= f.button :submit %>
  </div>

<% end %>
</div>
